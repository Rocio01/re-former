<%= form_for(@user) do |f| %>
  <%= f.label :username, 'Name' %>
  <%= f.text_field :username %> <br><br>
  <%= f.label :email %>
  <%= f.email_field :email,  placeholder: 'example@email.com' %> <br><br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br><br>
  <%= f.submit %>
<% end%>
